@page
@model ConfirmEmailModel
@{ ViewData["Title"] = "Confirm email"; }

<h1 class="text-center">Email Confirmed</h1>
<div class="row">
    <div class="col offset-4 text-center">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-center offset-1">Click Here to Login</button>
        </form>
    </div>
</div>